<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:id="@+id/home_profileImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_username"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu_regular"
                android:textStyle="bold"
                android:textColor="@color/rv_text" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_postImage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/home_like"
                android:src="@drawable/heart_outline"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/home_comment"
                android:src="@drawable/comment"
                android:layout_toEndOf="@id/home_like"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_bold"
            android:id="@+id/home_likesCount"
            android:textSize="18sp"
            android:textColor="@color/post_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_bold"
            android:id="@+id/home_caption"
            android:textSize="20sp"
            android:textColor="@color/post_secondary_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato_bold"
            android:id="@+id/comments"
            android:text="View all 20 Comments"
            android:textColor="@color/post_text_3"/>
    </LinearLayout>

</RelativeLayout>